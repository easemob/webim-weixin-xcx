<form class="text-input">
	<view class="f-row">
		<input
			class="f news"
			type="text"
			value="{{ inputMessage }}"
			placeholder="输入新消息"
			placeholder-style="color:#CFCFCF; padding-left:5px;"
			bindinput="bindMessage"
			bind:tap="focus"
			bind:focus="focus"
			bind:blur="blur" />
		<button class="send_btn" bind:tap="sendMessage">发送</button>
	</view>
</form>
