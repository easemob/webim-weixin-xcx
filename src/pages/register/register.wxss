.register {
	width: 100%;
	height: 100%;
	background-color: #ffffff;
}
.register_title {
	height: 128rpx;
	padding-left: 32rpx;
}
.register_title text{
	font-size: 64rpx;
	font-weight: 400;
	line-height: 96rpx;
}

.register_user, .register_pwd, .register_btn {
	display: flex;
}
.register_user input, .register_pwd input {
	height: 96rpx;
	background-color: #ffffff;
	border: 2rpx solid #999999;
	border-radius: 8rpx;
	box-sizing: border-box;
	padding: 0 32rpx;
	font-size: 34rpx;
	color: #000;
	margin: 0 64rpx;
	display: inline-block;
	flex: 1;
}

.nameFocus input, .psdFocus input{
	border: 3rpx solid #0873DE;
	box-sizing: border-box;
}
.register_user input {
	margin-top: 128rpx
}
.register_pwd input {
	margin-top: 32rpx;
}
.register_btn button{
	flex: 1;
	height: 96rpx;
	margin: 32rpx 64rpx 0;
	border-radius: 8rpx;
	line-height: 96rpx;
	color: rgb(255,255,255);
	background-color: #0873DE;
	font-size: 34rpx;
}
.btn_hover {
	background-color: #137DCD;
}
.register_back {
	margin-top: 28rpx;
	padding: 0 64rpx;
	height: 34rpx;
}
.register_back navigator {
	font-size: 24rpx;
	color: #0873DE;
}
.navigator-hover{
	color: #2892FD;
	background-color: #fff;
}
.input-hover{
	border: 2rpx solid red;
}
