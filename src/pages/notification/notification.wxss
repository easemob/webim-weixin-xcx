page{
	overflow: hidden;
}
.notification_title{
	background-color: #fff;
	width: 100%;
	height: 128rpx;
	line-height: 96rpx;
	font-size: 64rpx;
	font-weight: 400;
	padding-left: 32rpx;
	box-sizing: border-box;
}
.address_bottom{
	height: 108rpx;
	line-height: 108rpx;
	background: #fff;
	color: #000000;
	font-size: 34rpx;
	border-bottom: 0.5px #E5E5E5 solid;
	margin: 0 32rpx;
	display: flex;
	align-items: center;
	box-sizing: border-box;
	position: relative;
} 
.address_bottom image{
	width: 72rpx;
	height: 72rpx;
	margin-right: 24rpx;
}
.notification_dot{
	width: 32rpx;
	height: 32rpx;
	background-color: #CE3918;
	border-radius: 16rpx;
	position: absolute;
	right: 32rpx;
	color: #fff;
	line-height: 32rpx;
	text-align: center;
	font-size: 24rpx;
	top: 38rpx;
}