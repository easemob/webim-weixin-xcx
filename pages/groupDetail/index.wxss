
page {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.group_detail_container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.group_detail_container_header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.group_detail_container_header_title {
  font-size: 40rpx;
  font-weight: bold;
}

.group_detail_content_id_box {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  font-size: 12rpx;
}

.group_detail_content_id_text {
  width: 100%;
  font-size: .8rem;
  font-weight: 100;
  text-align: center;
}

.group_detail_content_copy_icon {
  width: 38rpx;
  height: 32rpx;
}
.group_detail_container_header_func_box{
  width: 100%;
}
.func_btn_container{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.func_btn_container_view{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
  height: 100%;
  background-color: #EEF0F1;
  text-align: center;
  border-radius: 10rpx;
  margin: 0 20rpx;
  padding: 5rpx;
  box-sizing: border-box;
}

.func_btn_container image {
  width: 80rpx;
  height: 80rpx;
}
.func_btn_container text{
  font-size: 20rpx;
  color: #009eff;
}