/* pages/mine/index.wxss */
page {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.mine_container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.mine_content {
  flex: 1; /* 占据剩余空间 */
  overflow-y: scroll; /* 启用滚动 */
}
.mine_content_header{
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.mine_content_id_box{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  font-size: 12rpx;
}
.mine_content_id_text{
  width: 100%;
  font-size: .8rem;
  font-weight: 100;
  text-align: center;
}
.mine_content_copy_icon{
  width: 38rpx;
  height: 32rpx;
}
.mine_account_text{
  font-weight: 500;
  color: #009eff;
}
