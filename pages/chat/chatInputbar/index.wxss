/* pages/chat/chatInputbar/index.wxss */
.chat_inputbar_container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFF;
}
.chat_inputbar_container_content{
  display: flex;
  flex-direction: row;
  align-items: center; 
  width: 100%;
  height: 100rpx;
  max-height: 200rpx;
  min-height: 100rpx;
  padding: 0 5rpx;
  box-sizing: border-box;
}
.chat_inputbar_container_input_box {
  flex: 1;
  width: 50%;
  height: 80rpx;
  max-height: 200rpx;
  background: #F1F2F3;
  border-radius: 10rpx;
}
.chat_inputbar_container_input_box > input{
  width: 100%;
  height: 100%;
}

.chat_inputbar_container_audio,
.chat_inputbar_container_emoji_box,
.chat_inputbar_container_more_func_box {
  width: 60rpx;
  height: 60rpx;
  margin: 0 5rpx;
}
.input_icon{
  width: 100%;
  height: 100%;
}
.chat_inputbar_placeholder {
  width: 100%;
  height: 100rpx;
}
.mock_emoji_container{
  width: 100%;
  height: 500rpx;
  background: #000;
}