/* pages/chat/chatInputbar/InputAudioComp/index.wxss */
.audio_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.audio_show_box{
  position: relative;
  width: 150rpx;
  height: 110rpx;
  /* height: 100rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.audio_show_record_default{
  width: 100%;
  height: 100rpx;
  background-color: #0092F8;
  border-radius: 60rpx;
  border: 15rpx solid #DEF2FE;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FFF;
}
.audio_show_record_text_default{
  position: absolute;
  bottom: -50rpx;
  font-size: 30rpx;
  color: #66777D;
  margin-top: 10rpx;
}
.audio_show_record_icon{
  width: 60rpx;
  height: 60rpx;
}

.audio_handle_icon_box,
.audio_handle_icon_box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #DDE2E2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.audio_handle_send_icon_box{
  background-color: #0092F8;
}
.audio_trash_icon,.audio_send_icon {
  width: 60rpx;
  height: 60rpx;
}